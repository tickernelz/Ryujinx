<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Ryujinx.Ava.Ui.Controls.SwkbdAppletWindow"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="Height"
        Width="400"
        Height="200"
        Title="Profile Window">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" VerticalAlignment="Center" Grid.RowSpan="5" Margin="5, 10, 20 , 10" Source="resm:Ryujinx.Ava.Assets.Images.Logo_Ryujinx.png" Height="80"
               MinWidth="50" />
        <TextBlock Grid.Row="0" Margin="5" Grid.Column="1" Text="{Binding MainText}" TextWrapping="Wrap" />
        <TextBlock Grid.Row="1" Margin="5" Grid.Column="1" Text="{Binding SecondaryText}"  TextWrapping="Wrap" />
        <TextBox Name="Input" KeyUp="Message_KeyUp" UseFloatingWatermark="True" TextInput="Message_TextInput" Text="{Binding Message}" Grid.Row="1"
                 Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="Wrap" />
        <TextBlock Name="Error" Margin="5" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch"
                   TextWrapping="Wrap" />
        <StackPanel Margin="10" Spacing="10" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Name="OkButton" Click="OkButton_OnClick">OK</Button>
            <Button Name="Cancel" Click="Cancel_OnClick">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>